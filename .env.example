# =============================================================================
# AI Receptionist - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME=ai-receptionist
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# -----------------------------------------------------------------------------
# Server
# -----------------------------------------------------------------------------
HOST=0.0.0.0
PORT=8000

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/ai_receptionist
# For sync operations (Alembic migrations)
DATABASE_URL_SYNC=postgresql://postgres:password@localhost:5432/ai_receptionist

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
REDIS_SESSION_TTL=1800  # 30 minutes in seconds

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60  # seconds

# -----------------------------------------------------------------------------
# Claude (Anthropic) - Phase 5
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# -----------------------------------------------------------------------------
# DrChrono - Phase 4
# -----------------------------------------------------------------------------
DRCHRONO_CLIENT_ID=your-drchrono-client-id
DRCHRONO_CLIENT_SECRET=your-drchrono-client-secret
DRCHRONO_REDIRECT_URI=http://localhost:8000/api/v1/auth/drchrono/callback
DRCHRONO_SANDBOX=true

# -----------------------------------------------------------------------------
# Twilio (SMS) - Phase 5
# -----------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json

# -----------------------------------------------------------------------------
# CORS (Comma-separated origins)
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
